<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appthemecolor"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="85dp"
        android:text="IP Address of PC"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/screen_settings_ip_address_EDT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:digits="0123456789."
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/screen_settings_start_scanner" />

        <ImageButton
            android:id="@+id/screen_settings_start_scanner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/style_theme_btn"
            android:src="@drawable/ic_scanner"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/screen_settings_save_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/style_theme_btn"
        android:text="Save"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout><!-- From: file:/Users/Raghul/Documents/Projects/Android/KrytosBarcodeReader/app/src/main/res/layout/screen_settings.xml -->